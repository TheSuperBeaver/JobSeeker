<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Job queries</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link href="styles.css" rel="stylesheet" />
  </head>
  <body>
    <%- include('menu') -%>
    <div class="container mt-5">
      <h1>Job Queries</h1>
      <button class="btn btn-primary mb-3" id="addQuery">+</button>
      <form id="queryForm">
        <div class="mb-3">
          <label for="searchTerm" class="form-label">Search Term</label>
          <input
            type="text"
            class="form-control"
            id="searchTerm"
            name="search_term"
          />
        </div>
        <div class="mb-3">
          <label for="town" class="form-label">Town</label>
          <input type="text" class="form-control" id="town" name="town" />
        </div>
        <div class="mb-3">
          <label for="country" class="form-label">Country</label>
          <input
            type="text"
            class="form-control"
            id="country"
            name="country"
            value="BE"
          />
        </div>
        <div class="form-check">
          <input
            type="checkbox"
            class="form-check-input"
            id="queryGoogle"
            name="query_google"
          />
          <label class="form-check-label" for="queryGoogle">Query Google</label>
        </div>
        <div class="form-check">
          <input
            type="checkbox"
            class="form-check-input"
            id="queryIndeed"
            name="query_indeed"
          />
          <label class="form-check-label" for="queryIndeed">Query Indeed</label>
        </div>
        <div class="form-check">
          <input
            type="checkbox"
            class="form-check-input"
            id="queryLinkedIn"
            name="query_linkedin"
          />
          <label class="form-check-label" for="queryLinkedIn"
            >Query LinkedIn</label
          >
        </div>
        <div class="mb-3">
          <label for="status" class="form-label">Status</label>
          <select class="form-control" id="status" name="status">
            <option value="automatic">Automatic</option>
            <option value="manual">Manual</option>
            <option value="deactivated">Deactivated</option>
          </select>
        </div>
        <button type="submit" class="btn btn-success">Submit</button>
      </form>
      <div id="filtersSection" class="mt-5">
        <h2>Filters</h2>
        <button class="btn btn-secondary" id="addFilter">Add Filter</button>
        <div id="filtersList"></div>
      </div>
    </div>
  </body>
</html>
